<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="9.67dp"
    android:gravity="center"
    android:background="@color/colorWhite">
    <ImageView android:layout_width="133.67dp"
        android:layout_height="74.33dp"
        android:scaleType="centerCrop"
        android:id="@+id/video_thumbnail"
        android:src="@drawable/dokuicon"
        android:layout_marginRight="18.67dp"/>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/video_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tittle"
            android:maxWidth="200dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/Black"
            android:maxLines="2"
            android:textSize="16.67sp"
            android:layout_marginLeft="8.81dp"
            android:layout_marginTop="9.33dp"
            android:layout_marginRight="13dp"/>

        <TextView
            android:id="@+id/video_description"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:singleLine="true"
            android:textColor="@color/Grey"
            android:textSize="16.67sp"
            android:layout_marginLeft="8.81dp"
            android:layout_marginBottom="9.33dp"
            android:layout_marginRight="13dp"/>


    </LinearLayout>

    <ImageView android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/e833e0ea32204634a94523682403d919"
        android:layout_marginRight="11.33dp"/>

</LinearLayout>